<div class="main">
  <h1>Sign Up as a Doctor</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, autofocus: true, placeholder: "Type in your first name" %>
    </div>

    <div class="field">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, placeholder: "Type in your last name" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, placeholder: "e.g. yourname@email.com" %>
    </div>

    <div class="field">
      <%= f.label :doctor_uid %><br />
      <%= f.number_field :doctor_uid, placeholder: "e.g. 22458" %>
    </div>

    <div class="field">
      <%= f.label :gender %><br />
      <%= f.text_field :gender, placeholder: "Type in your gender" %>
    </div>

    <div class="field">
      <%= f.label :specialization %><br />
      <%= f.text_field :specialization, placeholder: "e.g. Family Practice" %>
    </div>

    <div class="field">
      <%= f.label :institution %><br />
      <%= f.text_field :institution, placeholder: "e.g. Mt. Sinai Hospital" %>
    </div>

    <div class="field">
      <%= f.label :city %><br />
      <%= f.text_field :city, placeholder: "e.g. Toronto" %>
    </div>

    <div class="field">
      <%= f.label :country %><br />
      <%= f.text_field :country, placeholder: "e.g. Canada" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: "Tip: Use letters, numbers, and symbols" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Tip: Use letters, numbers, and symbols" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
</div>