<h1>Sign Up for OpenMD</h1>

<%= form_for @doctor do |f| %>

  <div class="doctor-field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="doctor-field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="doctor-field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="doctor-field">
    <%= f.label :phone_number %>
    <%= f.telephone_field :phone_number %>
  </div>

  <div class="doctor-field">
    <%= f.label :doctor_uid %>
    <%= f.text_field :doctor_uid %>
  </div>

  <div class="doctor-field">
    <%= f.label :gender %>
    <%= f.text_field :gender %>
  </div>

  <div class="doctor-field">
    <%= f.label :specialization %>
    <%= f.text_field :specialization %>
  </div>

  <div class="doctor-field">
    <%= f.label :institution %>
    <%= f.text_field :institution %>
  </div>

  <div class="doctor-field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="doctor-field">
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>

  <div class="doctor-field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="doctor-field">
    <%= f.label :password_confirmation %>
    <%= f.password_field  :password_confirmation %>
  </div>

  <div class="submit">
    <%= f.submit %>
  </div>

<% end %>