<%= form_for(@healthstatusupdate) do |f| %>

  <div class="field">
    <%= f.label :respiratory_rate %><br />
    <%= f.text_field :respiratory_rate %>
  </div>
  <div class="field">
    <%= f.label :heart_rate %><br />
    <%= f.text_area :heart_rate %>
  </div>
  <div class="field">
    <%= f.label :body_temperature %><br />
    <%= f.number_field :body_temperature %>
  </div>
  <div class="field">
    <%= f.label :blood_pressure %><br />
    <%= f.date_field :blood_pressure %>
  </div>
    <div class="field">
    <%= f.label :physical_health_score %><br />
    <%= f.date_field :physical_health_score %>
  </div>
    <div class="field">
    <%= f.label :mental_health_score %><br />
    <%= f.date_field :mental_health_score %>
  </div>
  <div class="actions">
    <%= f.submit "Update Health Status" %>
  </div>
<% end %>