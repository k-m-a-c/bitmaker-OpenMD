<%= form_for(@healthrecord) do |f| %>

  <div class="field">
    <%= f.label :allergies %><br />
    <%= f.text_field :allergies %>
  </div>
  <div class="field">
    <%= f.label :medications %><br />
    <%= f.text_area :medications %>
  </div>
  <div class="field">
    <%= f.label :surgeries %><br />
    <%= f.number_field :surgeries %>
  </div>
  <div class="field">
    <%= f.label :existing_conditions %><br />
    <%= f.date_field :existing_conditions %>
  </div>
  <div class="actions">
    <%= f.submit "Create Health Record" %>
  </div>
<% end %>